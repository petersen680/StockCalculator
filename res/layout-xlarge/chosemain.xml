<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    
    
    
    
     <TextView  
     
    android:id="@+id/calcatriskmsg" 
    android:layout_marginTop="50dp"
   android:layout_width="450dp" 
    android:layout_height="80dp" 
    android:text="@string/calcatriskamt"
    android:textSize="28sp"
    />
    
    
    
    <EditText 
  		android:id="@+id/calcatrisk" 
  		android:inputType="numberDecimal"
  	
  		android:layout_width="450dp"
  		android:layout_height="100dp" 
  		 android:textSize="28sp"
  		/>
    
    
    
    
    
     
      <Button
    android:id="@+id/btn_calcatrisk" 
    android:layout_marginTop="50dp"
    android:layout_width="450dp" 
    android:layout_height="100dp" 
    android:text="@string/atriskcalculate" 
    android:textSize="28sp" 
    /> 
    
      
       <TextView  
     
    android:id="@+id/atriskcalced" 
    android:layout_marginTop="50dp"
   android:layout_width="450dp" 
    android:layout_height="40dp" 
    android:text=""
    android:textSize="28sp"
    />
      
    
    <TextView  
     
    android:id="@+id/chose" 
    android:layout_marginTop="50dp"
   android:layout_width="450dp" 
    android:layout_height="80dp" 
    android:text="@string/chose"
    android:textSize="28sp"
    />
    
    

    
    <Button
    android:id="@+id/btn_long" 
    
    android:layout_width="450dp" 
    android:layout_height="100dp" 
    android:text="@string/l" 
    android:textSize="28sp" 
    /> 
    
    
    <Button
    android:id="@+id/btn_short" 
    android:layout_marginTop="50dp"
    android:layout_width="450dp" 
    android:layout_height="100dp" 
    android:text="@string/s"
    android:textSize="28sp" 
    /> 
    
    
    
</LinearLayout>
